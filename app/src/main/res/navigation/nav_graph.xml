<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_map_view">

    <fragment
        android:id="@+id/navigation_map_view"
        android:name="com.example.go4lunch.ui.map.MapFragment"
        android:label="@string/title_map_view"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_list_view"
        android:name="com.example.go4lunch.ui.restaurants.RestaurantListFragment"
        android:label="@string/title_list_view"
        tools:layout="@layout/fragment_restaurants" />

    <fragment
        android:id="@+id/navigation_workmates"
        android:name="com.example.go4lunch.ui.users.UserListFragment"
        android:label="@string/title_workmates_view"
        tools:layout="@layout/fragment_workmates" />
